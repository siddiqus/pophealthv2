<tr data-provider="<%= provider_row.id %>">
	<td><%= provider_row.family_name%></td>
	<td><%= provider_row.given_name%></td>
	<td><%= provider_row.team.try(:name) || "N/A" %></td>

	<td> <%= provider_row.npi %> </td>
	<td> <%= link_to "view / edit", :controller => "providers", :action => "show", :id => "#{provider_row.id}" %>  | <%= link_to "manage patients", manage_provider_patients_path(provider_row)%> | <%= link_to "view measures page", measures_path(:npi => provider_row.npi) %> 
	|
	<%= 
	 if current_user.admin?
	 		link_to 'delete', admin_delete_provider_path(:npi => provider_row.npi), confirm: "Are you sure you want to delete this provider?"
	 end
	%>
	
	</td>
</tr>

