<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
<div id="login">
  <div id="cap-top"></div>
  <div id="cap-body">
    <div id="branding">
      <%= image_tag "pophealth_welcome.png", :id => 'imgLogo', :title => 'popHealth welcomes you!', :alt => 'popHealth logo' %>
    </div>
    <div id="panelLogin" class="panel">
      <%= f.label :username %>
      <%= f.text_field :username %>
      <%= f.label :password %>
      <%= f.password_field :password %>
      
      <div class="accountError">
        <%= alert %>
      </div>

      <div class="actions">
        <%= submit_tag "Login", 'class' => "btn btn-info" %>
       
      </div>

      <%= render :partial => "devise/shared/links" %>

    </div>
  </div>
  <div id="cap-bottom"></div>
</div><!-- END #login -->
<% end %>

